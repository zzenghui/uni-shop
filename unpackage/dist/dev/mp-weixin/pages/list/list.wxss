.content {
  display: flex;
}
.content .scroll-left {
  width: 170px;
}
.content .scroll-left .scroll-left-item {
  position: relative;
  background-color: #f7f7f7;
  line-height: 60px;
  text-align: center;
  font-size: 16px;
}
.content .scroll-left .scroll-left-item.active {
  background-color: #ffffff;
}
.content .scroll-left .scroll-left-item.active:before {
  content: '';
  display: block;
  width: 3px;
  height: 30px;
  background-color: red;
  position: absolute;
  top: 50%;
  left: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
