.goods_item {
  position: relative;
  margin-bottom: 20px;
  width: 100%;
  height: 150px;
  padding-left: 1px;
}
.goods_item .state {
  width: 30px;
  height: 100%;
  float: left;
  padding: 60px 0px;
  box-sizing: border-box;
}
.goods_item .state radio {
  width: 30px;
  height: 30px;
  border-radius: 50%;
}
.goods_item ._p {
  font-size: 15px;
}
.goods_item .img {
  float: left;
  margin-right: 10px;
  width: 35%;
  height: 100%;
}
.goods_item .img image {
  width: 100%;
  height: 100%;
}
.goods_item .pric {
  position: absolute;
  bottom: 0;
  left: 160px;
  width: 70px;
  height: 30px;
  color: red;
  font-size: 18px;
}
.goods_item .total {
  display: flex;
  position: absolute;
  right: 0;
  bottom: 0;
  width: 150px;
  height: 50px;
}
.goods_item .total button {
  flex: 0.7;
}
.goods_item .total input {
  flex: 1.6;
  height: 100%;
  text-align: center;
}

